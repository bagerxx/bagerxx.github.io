  <script>
    // Tema toggle (light/dark)
    const themeBtn = document.getElementById('themeBtn');
    function isDark(){
      return document.documentElement.classList.contains('dark');
    }
    // Başlangıç: sistem ayarı
    if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
      document.documentElement.classList.add('dark');
    }
    themeBtn.addEventListener('click', ()=>{
      document.documentElement.classList.toggle('dark');
      themeBtn.setAttribute('aria-pressed', isDark());
    });

    // Yazdır / PDF
    document.getElementById('printBtn').addEventListener('click', ()=> window.print());

    // Yıl ve Son güncelleme
    document.getElementById('year').textContent = new Date().getFullYear();
    const updated = new Date('2025-08-25T00:00:00'); // gerekirse değiştirin
    const months = ['Ocak','Şubat','Mart','Nisan','Mayıs','Haziran','Temmuz','Ağustos','Eylül','Ekim','Kasım','Aralık'];
    document.getElementById('lastUpdated').textContent = `📅 Son güncelleme: ${updated.getDate()} ${months[updated.getMonth()]} ${updated.getFullYear()}`;
  </script>
